{% block markItemAsListed %}

	<div class="modal fade" id="markListedModal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="markListedModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="markListedModalLabel">Mark Item as Listed</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					{{ form_start(markItemAsListedForm, {'attr': {'id' : 'markListedForm', 'class' : 'mt-3 text-center prevent-submission', 'onsubmit': 'return quickEdit(this)'}}) }}
					{{ form_widget(markItemAsListedForm.status) }}
					{{ form_widget(markItemAsListedForm.id) }}
					{{ form_widget(markItemAsListedForm.quantity) }}
					{{ form_widget(markItemAsListedForm.quantityRemain) }}
					<div class="row">
						<div class="row d-flex">
							<div class="col-md-6">
								<div class="form-group">
									<label class="form-label">
										<i data-bs-toggle="tooltip" data-bs-placement="top" title={{ form_help(markItemAsListedForm.platform) }} class="fa-solid fa-circle-info"></i>
										Platform:</label>
									{{ form_widget(markItemAsListedForm.platform) }}
									{{ form_widget(markItemAsListedForm.customPlatform) }}
								</div>
								<div class="hidden form-group" id="splitTypeContainer">
									{{ form_widget(markItemAsListedForm.splitType, {'id' : 'markListedSplitType'}) }}
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="form-label" for="yourPricePerTicket">
										<i data-bs-toggle="tooltip" data-bs-placement="top" title={{ form_help(markItemAsListedForm.yourPricePerTicket) }} class="fa-solid fa-circle-info"></i>
										Your Price per Ticket:</label>
									<div class="input-group">
										{{ form_widget(markItemAsListedForm.yourPricePerTicketCurrency) }}
										{{ form_widget(markItemAsListedForm.yourPricePerTicket) }}
									</div>
								</div>
							</div>
						</div>
						<div class="row d-flex">
							<div class="hidden form-group restrictionsContainer">
								<label class="form-label">
									<i data-bs-toggle="tooltip" data-bs-placement="top" title={{ form_help(markItemAsListedForm.restrictions) }} class="fa-solid fa-circle-info"></i>
									Restrictions on use:</label>
								{{ form_row(markItemAsListedForm.noRestrictions) }}
								{{ form_row(markItemAsListedForm.restrictions) }}
							</div>
						</div>
						<div class="row d-flex">
							<div class="hidden form-group ticketDetailsContainer">
								<label class="form-label">
									<i data-bs-toggle="tooltip" data-bs-placement="top" title={{ form_help(markItemAsListedForm.ticketDetails) }} class="fa-solid fa-circle-info"></i>
									Required ticket details:</label>
								{{ form_row(markItemAsListedForm.ticketDetails) }}
							</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-soft-secondary" data-bs-dismiss="modal">Cancel</button>
					{{ form_widget(markItemAsListedForm.submit, {'id':'markListedBtn'}) }}
				</div>
				{{ form_end(markItemAsListedForm) }}
			</div>

		</div>
	</div>
{% endblock %}
