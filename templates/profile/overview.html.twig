			<div class="col-lg-6">
				<div class="profile-content tab-content">
					{% if user.connections['twitter'] is defined and user.connections['twitter']['display'] %}
						<div id="profile-feed" class="tab-pane fade active show">
							<div class="card">
								<a class="twitter-timeline" data-height="500" data-theme="light" href="https://twitter.com/{{ user.connections['twitter']['username'] }}?ref_src=twsrc%5Etfw">Tweets from
									{{ user.connections['twitter']['username'] }}</a>
								<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
