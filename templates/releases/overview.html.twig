{% extends 'base.html.twig' %}

{% block title %}Releases
{% endblock %}

{% block content %}

	<div class="conatiner-fluid content-inner py-0" style="margin-top: 40px;">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header d-flex justify-content-between">
							<div class="header-title">
								<h4 class="card-title">Add New Release</h4>
							</div>
						</div>
						<div class="card-body">
							<div class="acc-edit">
								{{ form(addReleaseForm) }}
								</div>
							</div>
						</div>

						<div class="card">
							<div class="p-20 card-body">
								<div class="row">
									<div class="dropdown">
										<a href="#" class="text-gray dropdown-toggle" id="dropdownMenuButton22" data-bs-toggle="dropdown" aria-expanded="false">
											Bulk Actions
										</a>
										<ul id="releaseBulkActions" class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton22">
											<li class="delete dropdown-item">Delete</li>
										</ul>
									</div>
								</div>
								<div class="mt-4 table-responsive overflow-hidden">
									<table id="releasesTable" class="table table-striped mb-0" role="grid" data-multiple-select-row="true" data-click-to-select="true" data-toggle="table" data-pagination="true" data-page-size="10" data-page-list="[5, 10, 25]" data-url="/api/admin/releases" data-side-pagination="server" data-loading-template="loadingTemplate" data-detail-view="true" data-detail-formatter="releaseDetailFormatter">
										<thead>
											<tr>
												<th data-field="state" data-checkbox="true"></th>
												<th data-field="releaseData"></th>
												<th data-field="description" data-sortable="true">Name</th>
												<th data-field="retailer" data-sortable="true">Retailer</th>
												<th data-field="country" data-sortable="true">Country</th>
												<th data-field="releaseDate" data-sortable="true">Release Date</th>
												<th data-field="eventDate" data-sortable="true">Event Date</th>
												<th data-field="actions">Actions</th>
											</tr>
										</thead>
									</table>
									<hr>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		{% include 'modals/delete_release.html.twig' %}

	{% endblock %}

	{% block javascripts %}
		{{ parent() }}
		<script src="{{ asset('js/releases.js') }}"></script>

	{% endblock %}
